# =============================================================================
# DJANGO MULTI-TENANT STARTER - CONFIGURATION
# =============================================================================
# Copy this file to .env and adjust values

# -----------------------------------------------------------------------------
# ENVIRONMENT
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=change-me-to-a-secure-random-string

# -----------------------------------------------------------------------------
# DOMAIN CONFIGURATION
# -----------------------------------------------------------------------------
DOMAIN_NAME=localhost
PUBLIC_DOMAIN=localhost

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
DB_HOST=db
DB_PORT=5432
POSTGRES_DB=starter_db
POSTGRES_USER=starter_user
POSTGRES_PASSWORD=change_me_secure_password

# -----------------------------------------------------------------------------
# REDIS
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# DJANGO SUPERUSER
# -----------------------------------------------------------------------------
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@localhost
DJANGO_SUPERUSER_PASSWORD=change_me_secure_password

# -----------------------------------------------------------------------------
# S3/MINIO STORAGE (optional)
# -----------------------------------------------------------------------------
USE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=starter-media
AWS_S3_ENDPOINT_URL=
AWS_S3_REGION_NAME=us-east-1
AWS_QUERYSTRING_AUTH=false

# -----------------------------------------------------------------------------
# EMAIL (default: console backend)
# -----------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=true
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=
# DEFAULT_FROM_EMAIL=noreply@example.com
